<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDCDC"
    tools:context=".SignupActivity">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tAdSoyad"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Ad Soyad :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                />

            <TextView
                android:id="@+id/textViewAdSoyad"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tGirisTarihi"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Giriş Tarihi :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewGirisTarihi"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tMezuniyetTarihi"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Mezun Tarihi :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewMezuniyetTarihi"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tEgitim"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Eğitim :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewEgitim"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tcalısmayeri"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="İş Yeri Bilgileri "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tUlke"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Ülke :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewUlke"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tSehir"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Şehir :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewSehir"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tFirma"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Firma :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewFirma"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tiletisim"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="İletişim Bilgileri "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tIletisimMail"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Mail Adresi :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewIletisimMail"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tIletisimTelNo"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Telefon No :"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewIletisimTelNo"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="Mail Gönder"
            android:id="@+id/sendmail"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mezunapp_border"/>
        <TextView
            android:id="@+id/tsosyalmedya"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Sosyal Medya Hesapları "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tSmedyaInstagram"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Instagram:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewSmedyaInstagram"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tSmedyaLinkedin"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:text="Linkedin:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"/>

            <TextView
                android:id="@+id/textViewSmedyaLinkedin"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
