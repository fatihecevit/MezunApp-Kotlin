<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:id="@+id/filtre_adsoyad"
        android:background="@drawable/mezunapp_border"
        android:padding="8dp"
        android:hint="Ad Soyad"
        android:drawablePadding="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey"/>
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:id="@+id/filtre_ulke"
        android:background="@drawable/mezunapp_border"
        android:padding="8dp"
        android:hint="Ülke"
        android:layout_marginTop="5dp"
        android:drawablePadding="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey"/>
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:id="@+id/filtre_sehir"
        android:background="@drawable/mezunapp_border"
        android:padding="8dp"
        android:hint="Şehir"
        android:layout_marginTop="5dp"
        android:drawablePadding="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey"/>
    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:id="@+id/filtre_mezunyili"
        android:background="@drawable/mezunapp_border"
        android:padding="8dp"
        android:hint="Mezun Yılı"
        android:layout_marginTop="5dp"
        android:drawablePadding="8dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/listele"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Filtrele"
        android:background="@drawable/button_type1"
        android:typeface="monospace"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:scrollbars="vertical"
        android:background="#FFFFFF"/>

</LinearLayout>